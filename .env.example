# Copy this file to .env and fill in the values

# Comma-separated list of allowed API keys
API_KEYS=

# Path to service account JSON for Firestore access
FIRESTORE_CREDENTIALS=

# Google Cloud credentials file (optional if using FIRESTORE_CREDENTIALS)
GOOGLE_APPLICATION_CREDENTIALS=

# ID of the Firestore project
FIRESTORE_PROJECT_ID=

# GCP project ID (deployment)
PROJECT_ID=

# Cloud Run service configuration
SERVICE_NAME=firestore-adapter
REGION=
SERVICE_ACCOUNT_EMAIL=

# Local development options
USE_LOCAL_USER=false
KEY_FILE=

# Application settings
DEBUG=False
PORT=8080
